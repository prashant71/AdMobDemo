<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codaemonsoftwares.admobtest.MainActivity">
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Type Of Ads In Android by Google AdMob"
        android:textColor="@android:color/holo_purple"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_banner"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="1. Banner Ad"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/button_interstitial"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="2.Interstitial Ad"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button_banner"/>

    <Button
        android:id="@+id/button_navtieExpress"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="3.Native Express Ad"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_interstitial" />

    <Button
        android:id="@+id/button_nativeAdvance"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="4.Native Advance Ad"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button_navtieExpress"/>

    <Button
        android:id="@+id/button_rewardvideo"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="5.Reward Video Ad"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button_nativeAdvance"/>

</android.support.constraint.ConstraintLayout>
